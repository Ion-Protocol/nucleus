{
  "name": "boring-vault",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "prettier": "prettier --write '**/*.{md,yml,yaml,ts,js}'",
    "coverage": "./coverage.sh",
    "solhint": "solhint -w 0 'src/**/*.sol'",
    "slither": "slither src",
    "prepare": "husky",
    "deploy-createx-l1": "forge script script/DeployCustomCreatex.s.sol --rpc-url $L1_RPC_URL --private-key $PRIVATE_KEY --slow",
    "deploy-createx-l2": "forge script script/DeployCustomCreatex.s.sol --rpc-url $L2_RPC_URL --private-key $PRIVATE_KEY --slow",
    "deploy-l1": "forge script script/deploy/deployAll.s.sol -f $L1_RPC_URL --private-key=$PRIVATE_KEY --slow",
    "deploy-l2": "forge script script/deploy/deployAll.s.sol -f $L2_RPC_URL --private-key=$PRIVATE_KEY --slow"
  },
  "devDependencies": {
    "@layerzerolabs/lz-definitions": "^2.3.25",
    "@layerzerolabs/lz-evm-messagelib-v2": "^2.3.25",
    "@layerzerolabs/test-devtools-evm-foundry": "^0.2.7",
    "@layerzerolabs/toolbox-foundry": "^0.1.6",
    "@openzeppelin/contracts": "^5.0.2",
    "@types/bun": "latest",
    "husky": "^9.1.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@layerzerolabs/lz-evm-oapp-v2": "^2.3.25",
    "@layerzerolabs/lz-evm-protocol-v2": "^2.3.25",
    "@layerzerolabs/lz-evm-v1-0.7": "^2.3.25",
    "forge-std": "^1.1.2",
    "prettier": "^3.3.2",
    "solhint": "^5.0.1"
  }
}
